<!DOCTYPE html>
<html>
  <head>
    <title>BourbonDemo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <%= yield %>
    <script src="https://maps.googleapis.com/maps/api/js"></script>
		<script>
			var bittersMap = (function () {
			    var myLatlng = new google.maps.LatLng(41.876466, -87.653144),
			        mapCenter = new google.maps.LatLng(41.876466, -87.653144),
			        mapCanvas = document.getElementById('map_canvas'),
			        mapOptions = {
			          center: mapCenter,
			          zoom: 16,
			          scrollwheel: true,
			          draggable: true,
			          disableDefaultUI: true,
			          mapTypeId: google.maps.MapTypeId.ROADMAP
			        },
			        map = new google.maps.Map(mapCanvas, mapOptions),
			        contentString =
			          '<div id="content">'+
			          '<div id="siteNotice">'+
			          '</div>'+
			          '<h1 id="firstHeading" class="firstHeading">DevBootcamp</h1>'+
			          '<div id="bodyContent"'+
			          '<p>(Chicago)</p>'+
			          '</div>'+
			          '</div>',
			        infowindow = new google.maps.InfoWindow({
			          content: contentString,
			          maxWidth: 300
			        }),
			        marker = new google.maps.Marker({
			          position: myLatlng,
			          map: map,
			          title: 'Dev Bootcamp (Chicago)'
			        });

			    return {
			      init: function () {
			        map.set('styles', [{
			          featureType: 'landscape',
			          elementType: 'geometry',
			          stylers: [
			            { hue: '#ffff00' },
			            { saturation: 30 },
			            { lightness: 10}
			          ]}
			        ]);

			        google.maps.event.addListener(marker, 'click', function () {
			          infowindow.open(map,marker);
			        });
			      }
			    };
			  }());
			 bittersMap.init();
		</script>
  </body>
</html>
